@model List<Post>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista kontaktów:</h1>
<div>
    @if (Model.Count > 0)
    {


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Content)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Author)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Tags)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Comment)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @item.Content
                    </td>
                    <td>
                        @item.Author
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>
                        @item.Tags
                    </td>
                    <td>
                        @item.Comment
                    </td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Update"
                           asp-controller="Post"
                           asp-route-id=@item.Id>Edytuj</a>
                        <a class="btn btn-primary"
                           asp-action="Details"
                           asp-controller="Post"
                           asp-route-id=@item.Id>Szczegóły</a>
                        <a class="btn btn-primary"
                           asp-action="Delete"
                           asp-controller="Post"
                           asp-route-id=@item.Id>Usuń</a>
                    </td>
                </tr>
            }
        </table>
    }

</div>

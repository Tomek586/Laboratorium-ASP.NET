@{
}
<h1>Dodawanie Post'a</h1>
<form asp-action="Create" asp-controller="Post" method="post">
    <div class="mb-3">
        <label asp-for="Content"></label>
        <input class="form-control" asp-for="Content" />
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="Date" />
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Author"></label>
        <input class="form-control" asp-for="Author" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tags"></label>
        <input class="form-control" asp-for="Tags" />
        <span class="text-danger" asp-validation-for="Tags"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comment"></label>
        <input class="form-control" asp-for="Comment" />
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>


    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Utwórz</button>
    </div>

</form>